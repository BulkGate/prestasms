{
  "name": "bulkgate/prestasms",
  "type": "prestashop-module",
  "minimum-stability": "RC",
  "require": {
    "php": ">= 7.4",
    "bulkgate/plugin": "dev-master"
  },
  "require-dev": {
    "tracy/tracy": "^2.9",
    "nette/tester": "^2.4.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.3",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "BulkGate\\Controller\\": "src/Controller/"
    },
    "classmap": [
      "src/"
    ]
  },
  "scripts": {
    "tester": "tester -C tests --colors=1",
    "coverage": "tester -C --coverage=coverage.html --coverage-src=src --stop-on-fail",
    "phpstan": "phpstan analyse -c phpstan.neon --memory-limit=1G"
  },
  "config": {
    "prepend-autoloader": false,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
